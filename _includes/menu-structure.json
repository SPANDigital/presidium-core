[{% for section in site.structure %} {
  {% assign articles = site[section.collection] %}
  {% assign path =  site.baseurl | append: section.path | replace: '//','/' %}
  "title" : "{{ section.title }}",
  "slug" : "{{ section.title | slugify }}",
  "path" : "{{ path }}",
  "collection" : "{{ section.collection }}",
  "expandable" : {% if section.expandable == nil %}true{% else %}{{section.expandable}}{% endif %},
  "articles" : [
{% for article in articles %}{
    {% assign slug = article.title | slugify %}
    "id": "{{article.id}}",
    "title" : "{{ article.title }}",
    "path" : "{{path | append: '#' | append: slug}}",
    "slug" : "{{'#' | append: slug}}",
    "category": "{{article.category}}",
    "filters": {% if article.filters.first%} {{article.filters | jsonify}} {% elsif article.filters | size > 0%} ["{{article.filters}}"] {% else %} [] {% endif %}
}{% if article != articles.last%},{% endif %}
{% endfor %}]}{% if section != site.structure.last%},{% endif %}
{% endfor %}]